<?xml version="1.0" encoding="UTF-8"?>
  
<!DOCTYPE hibernate-mapping   
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

   <hibernate-mapping>
      <joined-subclass name="com.infinity.datamarket.comum.transacao.EventoItemPagamento" extends="com.infinity.datamarket.comum.transacao.EventoTransacao" table="EVENTO_ITEM_PAGAMENTO" lazy="false">

          <key>
              <column name="LOJA"/>
              <column name="COMPONENTE"/>
              <column name="NUM_TRANSACAO"/>
              <column name="DATA_TRANSACAO"/>
              <column name="NUM_EVENTO"/>
          </key>


          <property name="valorBruto" type="java.math.BigDecimal" update="true" insert="true">
              <column name="VALOR_BRUTO" length="20" not-null="false"/>
          </property>

          <property name="valorDesconto" type="java.math.BigDecimal" update="true" insert="true">
              <column name="VALOR_DESCONTO" length="20" not-null="false"/>
          </property>

          <property name="valorAcrescimo" type="java.math.BigDecimal" update="true" insert="true">
              <column name="VALOR_ACRESCIMO" length="20" not-null="false"/>
          </property>

          <property name="formaImpressora" type="java.lang.String" update="true" insert="true">
            <column name="FORMA_IMPRESSORA" length="50" not-null="true"/>
          </property>
          
          <property name="codigoForma" type="int" update="true" insert="true">
            <column name="CODIGO_FORMA" length="10" not-null="true"/>
          </property>

          <property name="codigoPlano" type="int" update="true" insert="true">
            <column name="CODIGO_PLANO" length="10" not-null="true"/>
          </property>



      </joined-subclass>
   </hibernate-mapping>
