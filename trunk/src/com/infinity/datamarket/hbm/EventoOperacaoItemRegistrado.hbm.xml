<?xml version="1.0" encoding="UTF-8"?>
  
<!DOCTYPE hibernate-mapping   
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

   <hibernate-mapping>
      <joined-subclass name="com.infinity.datamarket.comum.operacao.EventoOperacaoItemRegistrado" extends="com.infinity.datamarket.comum.operacao.EventoOperacao" table="EVENTO_OPERACAO_ITEM_REGISTRADO" lazy="false">

          <key>
              <column name="LOJA"/>
              <column name="ID"/>
              <column name="NUM_EVENTO"/>
          </key>


          <property name="quantidade" type="java.math.BigDecimal" update="true" insert="true">
              <column name="QUANTIDADE" length="20" not-null="false"/>
          </property>

          <property name="desconto" type="java.math.BigDecimal" update="true" insert="true">
              <column name="DESCONTO" length="20" not-null="false"/>
          </property>

          <property name="preco" type="java.math.BigDecimal" update="true" insert="true">
              <column name="PRECO" length="20" not-null="false"/>
          </property>
          
          <property name="lucro" type="java.math.BigDecimal" update="true" insert="true">
              <column name="LUCRO" length="20" not-null="false"/>
          </property>
          
          <one-to-one name="produtoOperacaoItemRegistrado" class="com.infinity.datamarket.comum.operacao.ProdutoOperacaoItemRegistrado" cascade="all" lazy="false"/>



      </joined-subclass>
   </hibernate-mapping>
