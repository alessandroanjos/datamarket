<?xml version="1.0" encoding="UTF-8"?>
  
<!DOCTYPE hibernate-mapping   
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">   


<hibernate-mapping>
    <class name="com.infinity.datamarket.comum.producao.Producao" table="PRODUCAO" dynamic-update="false" dynamic-insert="false" lazy="false">
        
         <id
            name="id"
            column="ID"
            type="java.lang.Long"
            length="18"
            unsaved-value="null"
        >
            <generator class="assigned">
            </generator>
        </id>

		<property name="lote" type="int" update="true" insert="true">
            <column name="LOTE" length="20" not-null="false"/>
        </property>
	
        <property name="quantidade" type="java.math.BigDecimal" update="true" insert="true">
            <column name="QUANTIDADE" length="20" not-null="false"/>
        </property>
        
        <property name="valorUnitario" type="java.math.BigDecimal" update="true" insert="true">
            <column name="VALOR_UNITARIO" length="20" not-null="false"/>
        </property>
        
        
        <property name="dataFabricacao" type="java.util.Date" update="false" insert="true">
            <column name="DATA_FABRICACAO" length="10" not-null="true"/>
        </property> 
        
        <many-to-one name="produto" class="com.infinity.datamarket.comum.produto.Produto" update="true" insert="true">
          <column name="ID_PRODUTO" not-null="false"/>
        </many-to-one>
        
        <many-to-one name="estoque" class="com.infinity.datamarket.comum.estoque.Estoque" update="true" insert="true">
          <column name="ID_ESTOQUE" not-null="true"/>
          <column name="ID_LOJA" not-null="true"/>
        </many-to-one>
	
    </class>

</hibernate-mapping>
