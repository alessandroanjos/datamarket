<?xml version="1.0" encoding="UTF-8"?>
  
<!DOCTYPE hibernate-mapping   
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"   
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
    <class name="com.infinity.datamarket.comum.produto.GrupoProduto" table="GRUPO_PRODUTO" dynamic-update="false" dynamic-insert="false" lazy="false">
        
       <id
            name="id"
            column="ID"
           
        >
            <generator class="increment">
            </generator>
        </id>


        <property name="descricao" type="java.lang.String" update="true" insert="true">
            <column name="DESCRICAO" length="20" not-null="true"/>
        </property>

	<many-to-one name="grupoSuperior" class="com.infinity.datamarket.comum.produto.GrupoProduto" update="true" insert="true">
          <column name="ID_GRUPO_SUPERIOR" not-null="false"/>
        </many-to-one>
        
    </class>

</hibernate-mapping>
