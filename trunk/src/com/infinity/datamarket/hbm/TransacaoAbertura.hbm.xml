<?xml version="1.0" encoding="UTF-8"?>
  
<!DOCTYPE hibernate-mapping   
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">



   <hibernate-mapping>
      <joined-subclass name="com.infinity.datamarket.comum.transacao.TransacaoAbertura" extends="com.infinity.datamarket.comum.transacao.Transacao" table="TRANSACAO_ABERTURA" lazy="false">


          <key>
              <column name="LOJA"/>
              <column name="COMPONENTE"/>
              <column name="NUM_TRANSACAO"/>
              <column name="DATA_TRANSACAO"/>
          </key>

          <property name="codigoUsuarioAutorizador" type="java.lang.String" update="true" insert="true">
            <column name="COD_USU_AUTORIZADOR" length="20" not-null="false"/>
          </property>

          <property name="gtInicio" type="java.math.BigDecimal" update="true" insert="true">
              <column name="GT_INICIO" length="20" not-null="false"/>
          </property>

      </joined-subclass>
   </hibernate-mapping>  
