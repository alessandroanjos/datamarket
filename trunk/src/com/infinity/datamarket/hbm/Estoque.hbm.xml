<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping   
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"   
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
	<class name="com.infinity.datamarket.comum.estoque.Estoque"
		table="ESTOQUE" dynamic-update="false" dynamic-insert="false"
		lazy="false">

		<composite-id name="pk" class="com.infinity.datamarket.comum.estoque.EstoquePK">			
	   		<key-property name="id" column="ID" type="long"/>
			<key-many-to-one name="loja" class="com.infinity.datamarket.comum.usuario.Loja" column="ID_LOJA"/>
	    </composite-id>

		<property name="descricao" type="java.lang.String" update="true"
			insert="true">
			<column name="DESCRICAO" length="20" not-null="true" />
		</property>
		
	</class>

</hibernate-mapping>