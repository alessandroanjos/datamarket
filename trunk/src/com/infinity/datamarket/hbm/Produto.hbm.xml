<?xml version="1.0" encoding="UTF-8"?>
  
<!DOCTYPE hibernate-mapping   
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">   


<hibernate-mapping>
    <class name="com.infinity.datamarket.comum.produto.Produto" table="PRODUTO" dynamic-update="false" dynamic-insert="false" lazy="false">
        
        <id
            name="id"
            column="ID"
            type="java.lang.Long"
            length="18"
            unsaved-value="null"
        >
            <generator class="assigned">
            </generator>
        </id>



        <property name="codigoExterno" type="java.lang.String" update="true" insert="true">
            <column name="CODIGO_EXTERNO" length="15" not-null="true"/>
        </property>
	<property name="codigoAutomacao" type="java.lang.String" update="true" insert="true">
            <column name="CODIGO_AUTOMACAO" length="15" not-null="true"/>
        </property>
        
        <property name="descricaoCompleta" type="java.lang.String" update="true" insert="true">
            <column name="DESCRICAO_COMPLETA" length="50" not-null="true"/>
        </property>

        <property name="descricaoCompacta" type="java.lang.String" update="true" insert="true">
            <column name="DESCRICAO_COMPACTA" length="30" not-null="true"/>
        </property>

        <property name="precoPadrao" type="java.math.BigDecimal" update="true" insert="true">
            <column name="PRECO_PADRAO" length="20" not-null="true"/>
        </property>

        <property name="precoPromocional" type="java.math.BigDecimal" update="true" insert="true">
            <column name="PRECO_PROMOCAO" length="20" not-null="false"/>
        </property>
        
        <property name="precoCompra" type="java.math.BigDecimal" update="true" insert="true">
            <column name="PRECO_COMPRA" length="20" not-null="false"/>
        </property>
        
	<many-to-one name="tipo" class="com.infinity.datamarket.comum.produto.TipoProduto" update="true" insert="true">
          <column name="ID_TIPO_PRODUTO" not-null="true"/>
        </many-to-one>

	<many-to-one name="unidade" class="com.infinity.datamarket.comum.produto.Unidade" update="true" insert="true">
          <column name="ID_UNIDADE" not-null="true"/>
        </many-to-one>
	<many-to-one name="imposto" class="com.infinity.datamarket.comum.produto.Imposto" update="true" insert="true">
          <column name="ID_IMPOSTO" not-null="true"/>
        </many-to-one>
	<many-to-one name="grupo" class="com.infinity.datamarket.comum.produto.GrupoProduto" update="true" insert="true">
          <column name="ID_GRUPO_PRODUTO" not-null="true"/>
        </many-to-one>

	<many-to-one name="fabricante" class="com.infinity.datamarket.comum.fabricante.Fabricante" update="true" insert="true">
          <column name="ID_FABRICANTE" not-null="true"/>
    </many-to-one> 
    
	<set name="lojas" table="PRODUTO_LOJA" lazy="false">
             <key column="ID_PRODUTO" />
             <many-to-many column="ID_LOJA" class="com.infinity.datamarket.comum.usuario.Loja"/>
        </set>

    </class>

</hibernate-mapping>
