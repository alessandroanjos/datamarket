<?xml version="1.0" encoding="UTF-8"?>
  
<!DOCTYPE hibernate-mapping   
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"   
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">   


<hibernate-mapping>
    <class name="com.infinity.datamarket.pdv.maquinaestados.MicroOperacaoAssociada" table="MICRO_OPERACAO_ASSOCIADA" dynamic-update="false" dynamic-insert="false" lazy="false">

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
            length="2"
            unsaved-value="null"
        >
            <generator class="assigned">
            </generator>
        </id>

        <many-to-one name="microOperacao" class="com.infinity.datamarket.pdv.maquinaestados.MicroOperacao" update="false" insert="false">
          <column name="ID_MICRO_OPERACAO" not-null="true"/>
        </many-to-one>

        <set name="saidas" table="SAIDA_MICRO_OPERACAO_ASSOCIADA" lazy="false">
             <key column="ID_MICRO_OPERACAO_ASSOCIADA" />
             <many-to-many column="ID_SAIDA_MICRO_OPERACAO" class="com.infinity.datamarket.pdv.maquinaestados.SaidaMicroOperacaoAssociada"/>
        </set>

    </class>

</hibernate-mapping>
