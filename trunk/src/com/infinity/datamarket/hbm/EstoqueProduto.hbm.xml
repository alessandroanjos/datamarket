<?xml version="1.0" encoding="UTF-8"?>
  
<!DOCTYPE hibernate-mapping   
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">   


<hibernate-mapping>
    <class name="com.infinity.datamarket.comum.estoque.EstoqueProduto" table="ESTOQUE_PRODUTO" dynamic-update="false" dynamic-insert="false" lazy="false">
        
        <composite-id name="pk" class="com.infinity.datamarket.comum.estoque.EstoqueProdutoPK">			
            <key-many-to-one name="produto" class="com.infinity.datamarket.comum.produto.Produto" column="ID_PRODUTO"/>
            <key-many-to-one name="estoque" class="com.infinity.datamarket.comum.estoque.Estoque">
            	<column name="ID_ESTOQUE"/>
            	<column name="ID_LOJA"/>
            </key-many-to-one>
         </composite-id>

	
        <property name="quantidade" type="java.math.BigDecimal" update="true" insert="true">
            <column name="QUANTIDADE" length="20" not-null="false"/>
        </property>
	
    </class>

</hibernate-mapping>
