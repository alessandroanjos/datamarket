<?xml version="1.0" encoding="UTF-8"?>
  
<!DOCTYPE hibernate-mapping   
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">



   <hibernate-mapping>
      <joined-subclass name="com.infinity.datamarket.comum.usuario.Vendedor" extends="com.infinity.datamarket.comum.usuario.Usuario" table="VENDEDOR" lazy="false">

		 <key>               
              <column name="ID_USUARIO"/>   
         </key>

          <property name="comissao" type="java.math.BigDecimal" update="true" insert="true">
              <column name="COMISSAO" length="20" not-null="false"/>
          </property>

      </joined-subclass>
   </hibernate-mapping>  
