<?xml version="1.0" encoding="UTF-8"?>
  
<!DOCTYPE hibernate-mapping   
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

   <hibernate-mapping>
      <class name="com.infinity.datamarket.comum.operacao.ProdutoOperacaoItemRegistrado" table="PRODUTO_OPERAC_ITEM_REGISTRADO" lazy="false">

          <composite-id name="pk" class="com.infinity.datamarket.comum.operacao.EventoOperacaoPK">
           <key-property name="loja" column="LOJA" type="integer"/>
           <key-property name="id" column="ID" type="integer"/>
           <key-property name="numeroEvento" column="NUM_EVENTO" type="integer"/>
         </composite-id>

          <property name="idProduto" type="int" update="true" insert="true">
            <column name="ID_PRODUTO" length="20" not-null="false"/>
          </property>

          <property name="codigoExterno" type="java.lang.String" update="true" insert="true">
              <column name="CODIGO_EXTERNO" length="50" not-null="false"/>
          </property>

          <property name="descricaoCompleta" type="java.lang.String" update="true" insert="true">
              <column name="DESCRICAO_COMPLETA" length="50"  not-null="false"/>
          </property>

          <property name="precoPadrao" type="java.math.BigDecimal" update="true" insert="true">
              <column name="PRECO_PADRAO" length="20" not-null="false"/>
          </property>

          <property name="precoPraticado" type="java.math.BigDecimal" update="true" insert="true">
              <column name="PRECO_PRATICADO" length="20" not-null="false"/>
          </property>
	  	  <property name="impostoImpressora" type="java.lang.String" update="true" insert="true">
              <column name="IMP_IMPRESSORA" length="50" not-null="false"/>
          </property>
          <property name="percentual" type="java.math.BigDecimal" update="true" insert="true">
              <column name="PERCENTUAL" length="20" not-null="false"/>
          </property>
          
          <property name="unidade" type="java.lang.String" update="true" insert="true">
              <column name="UNIDADE" length="50" not-null="false"/>
          </property>
          
          <property name="tipoProduto" type="java.lang.Long" update="true" insert="true">
              <column name="TIPO" not-null="false"/>
          </property>

      </class>
   </hibernate-mapping>
