<?xml version="1.0" encoding="UTF-8"?>
  
<!DOCTYPE hibernate-mapping   
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">



<hibernate-mapping>
    <class name="com.infinity.datamarket.comum.transacao.Transacao" table="TRANSACAO" dynamic-update="false" dynamic-insert="false" lazy="false">

        <composite-id name="pk" class="com.infinity.datamarket.comum.transacao.TransacaoPK">
           <key-property name="loja" column="LOJA" type="integer"/>
           <key-property name="componente" column="COMPONENTE" type="integer"/>
           <key-property name="numeroTransacao" column="NUM_TRANSACAO" type="integer"/>
           <key-property name="dataTransacao" column="DATA_TRANSACAO" type="date"/>
         </composite-id>

        <property name="tipoTransacao" type="int" update="true" insert="true">
            <column name="TIPO_TRANSACAO" length="20" not-null="false"/>
        </property>
        
        <property name="status" type="java.lang.String" update="true" insert="true">
            <column name="STATUS" length="2" not-null="false"/>
        </property>
    </class>    

</hibernate-mapping>
