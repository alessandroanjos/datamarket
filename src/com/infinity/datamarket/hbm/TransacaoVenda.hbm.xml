<?xml version="1.0" encoding="UTF-8"?>
  
<!DOCTYPE hibernate-mapping   
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

   <hibernate-mapping>
      <joined-subclass name="com.infinity.datamarket.comum.transacao.TransacaoVenda" extends="com.infinity.datamarket.comum.transacao.Transacao" table="TRANSACAO_VENDA" lazy="false">

          <key>
              <column name="LOJA"/>
              <column name="COMPONENTE"/>
              <column name="NUM_TRANSACAO"/>
              <column name="DATA_TRANSACAO"/>
          </key>

          <property name="codigoUsuarioVendedor" type="java.lang.String" update="true" insert="true">
            <column name="COD_USU_VENDEDOR" length="20" not-null="false"/>
          </property>

          <property name="codigoUsuarioOperador" type="java.lang.String" update="true" insert="true">
              <column name="COD_USU_OPERADOR" length="20" not-null="false"/>
          </property>

          <property name="dataHoraInicio" type="java.util.Date" update="true" insert="true">
              <column name="DATA_HORA_INICIO" not-null="false"/>
          </property>

          <property name="dataHoraFim" type="java.util.Date" update="true" insert="true">
              <column name="DATA_HORA_FIM" not-null="false"/>
          </property>

          <property name="valorTroco" type="java.math.BigDecimal" update="true" insert="true">
              <column name="VALOR_TROCO" length="20" not-null="false"/>
          </property>
          
          <property name="numeroCupom" type="java.lang.String" update="true" insert="true">
              <column name="NUMERO_CUPOM" length="20" not-null="false"/>
          </property>
          
          <property name="situacao" type="java.lang.String" update="true" insert="true">
              <column name="SITUACAO" length="20" not-null="false"/>
          </property>

          <property name="valorCupom" type="java.math.BigDecimal" update="true" insert="true">
              <column name="VALOR_CUPOM" length="20" not-null="false"/>
          </property>

	      <property name="descontoCupom" type="java.math.BigDecimal" update="true" insert="true">
              <column name="DESCONTO_CUPOM" length="20" not-null="false"/>
          </property>
          
          <property name="comissaoUsuarioVendedor" type="java.math.BigDecimal" update="true" insert="true">
              <column name="COMISSAO_USU_VENDEDOR" length="20" not-null="false"/>
          </property>


          <set name="eventosTransacao" inverse="true" cascade="all" lazy="false">
                 <key>
                     <column name="LOJA"/>
                     <column name="COMPONENTE"/>
                     <column name="NUM_TRANSACAO"/>
                     <column name="DATA_TRANSACAO"/>
                 </key>
                 <one-to-many class="com.infinity.datamarket.comum.transacao.EventoTransacao"/>
          </set>

      </joined-subclass>
   </hibernate-mapping>
