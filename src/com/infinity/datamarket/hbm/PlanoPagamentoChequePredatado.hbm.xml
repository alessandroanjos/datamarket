<?xml version="1.0" encoding="UTF-8"?>
  
<!DOCTYPE hibernate-mapping   
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

   <hibernate-mapping>
      <joined-subclass name="com.infinity.datamarket.comum.pagamento.PlanoPagamentoChequePredatado" extends="com.infinity.datamarket.comum.pagamento.PlanoPagamento" table="PLANO_PAGAMENTO_CHEQUE_PRE" lazy="false">

          <key>
              <column name="ID_PLANO"/>
          </key>
          
          <property name="percentagemEntrada" type="java.math.BigDecimal" update="true" insert="true">
              <column name="PERCENTAGEM_ENTRADA" length="20" not-null="false"/>
          </property>

          <set name="parcelas" inverse="true" cascade="all" lazy="false" order-by="NUM_ENTRADA">
	        <key>
	            <column name="ID_PLANO"/>
	        </key>
	        <one-to-many class="com.infinity.datamarket.comum.pagamento.ParcelaPlanoPagamentoChequePredatado"/>
    	</set>
    	
          
      </joined-subclass>
   </hibernate-mapping>
