<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping   
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<joined-subclass
		name="com.infinity.datamarket.comum.operacao.OperacaoPedido"
		extends="com.infinity.datamarket.comum.operacao.Operacao"
		table="OPERACAO_PEDIDO" lazy="false">

		<key>
			<column name="LOJA" />
			<column name="ID" />			
		</key>

		<property name="codigoUsuarioOperador" type="java.lang.String"
			update="true" insert="true">
			<column name="COD_USU_OPERADOR" length="50"
				not-null="false" />
		</property>
		
		<property name="codigoUsuarioVendedor" type="java.lang.String"
			update="true" insert="true">
			<column name="COD_USU_VENDEDOR" length="50"
				not-null="false" />
		</property>

		<property name="valor" type="java.math.BigDecimal"
			update="true" insert="true">
			<column name="VALOR" length="20" not-null="false" />
		</property>
		
		<property name="desconto" type="java.math.BigDecimal"
			update="true" insert="true">
			<column name="DESCONTO" length="20" not-null="true" />
		</property>
		
		<many-to-one name="cliente"
			class="com.infinity.datamarket.comum.transacao.ClienteTransacao"
			update="true" insert="true">
			<column name="CPF_CNPJ_CLIENTE_TRANSACAO" not-null="false" />
		</many-to-one>

		<set name="eventosOperacao" inverse="true" cascade="save-update, delete-orphan"
			lazy="true">
			<key>
				<column name="LOJA" />
				<column name="ID" />				
			</key>
			<one-to-many
				class="com.infinity.datamarket.comum.operacao.EventoOperacao" />
		</set>
		
		<many-to-one name="transacaoVenda"
			class="com.infinity.datamarket.comum.transacao.TransacaoVenda"
			update="true" insert="true" >
			<column name="LOJA_TRANSACAO" not-null="false" />
			<column name="COMPONENTE_TRANSACAO" not-null="false" />
			<column name="NUM_TRANSACAO" not-null="false" />
			<column name="DATA_TRANSACAO" not-null="false" />
		</many-to-one>
		
		<property name="usaEnderecoEntrega" type="java.lang.String"
			update="true" insert="true">
			<column name="ENDERECO_ENTREGA" length="1"
				not-null="true" />
		</property>
		<property name="logradouro" type="java.lang.String"
			update="true" insert="true">
			<column name="LOGRADOURO" length="200"
				not-null="false" />
		</property>
		<property name="numero" type="java.lang.String"
			update="true" insert="true">
			<column name="NUMERO" length="50"
				not-null="false" />
		</property>
		<property name="complemento" type="java.lang.String"
			update="true" insert="true">
			<column name="COMPLEMENTO" length="50"
				not-null="false" />
		</property>
		<property name="bairro" type="java.lang.String"
			update="true" insert="true">
			<column name="BAIRRO" length="50"
				not-null="false" />
		</property>
		<property name="cidade" type="java.lang.String"
			update="true" insert="true">
			<column name="CIDADE" length="50"
				not-null="false" />
		</property>
		<property name="estado" type="java.lang.String"
			update="true" insert="true">
			<column name="ESTADO" length="2"
				not-null="false" />
		</property>
		<property name="cep" type="java.lang.String"
			update="true" insert="true">
			<column name="CEP" length="10"
				not-null="false" />
		</property>
		<property name="pontoReferencia" type="java.lang.String"
			update="true" insert="true">
			<column name="PONTO_REFERENCIA" length="200"
				not-null="false" />
		</property>

	</joined-subclass>
</hibernate-mapping>
