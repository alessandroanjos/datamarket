<?xml version="1.0" encoding="UTF-8"?>
  
<!DOCTYPE hibernate-mapping   
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

   <hibernate-mapping>
      <joined-subclass name="com.infinity.datamarket.comum.transacao.EventoItemRegistrado" extends="com.infinity.datamarket.comum.transacao.EventoTransacao" table="EVENTO_ITEM_REGISTRADO" lazy="false">

          <key>
              <column name="LOJA"/>
              <column name="COMPONENTE"/>
              <column name="NUM_TRANSACAO"/>
              <column name="DATA_TRANSACAO"/>
              <column name="NUM_EVENTO"/>
          </key>


          <property name="quantidade" type="java.math.BigDecimal" update="true" insert="true">
              <column name="QUANTIDADE" length="20" not-null="false"/>
          </property>

          <property name="desconto" type="java.math.BigDecimal" update="true" insert="true">
              <column name="DESCONTO" length="20" not-null="false"/>
          </property>

          <property name="preco" type="java.math.BigDecimal" update="true" insert="true">
              <column name="PRECO" length="20" not-null="false"/>
          </property>
          
          <property name="situacao" type="java.lang.String" update="true" insert="true">
            <column name="SITUACAO" length="20" not-null="true"/>
          </property>
          
          <one-to-one name="produtoItemRegistrado" class="com.infinity.datamarket.comum.transacao.ProdutoItemRegistrado" cascade="all"/>



      </joined-subclass>
   </hibernate-mapping>
