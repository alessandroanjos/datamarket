<?xml version="1.0" encoding="UTF-8"?>
  
<!DOCTYPE hibernate-mapping   
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">   


<hibernate-mapping>
    <class name="com.infinity.datamarket.comum.usuario.Usuario" table="USUARIO" dynamic-update="false" dynamic-insert="false" lazy="false">

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
            length="3"
            unsaved-value="null"
        >
            <generator class="assigned">
            </generator>
        </id>


        <property name="nome" type="java.lang.String" update="true" insert="true">
            <column name="NOME" length="20" not-null="true"/>
        </property>

        <property name="senha" type="java.lang.String" update="true" insert="true">
            <column name="SENHA" length="20" not-null="true"/>
        </property>

        <many-to-one name="perfil" class="com.infinity.datamarket.comum.usuario.Perfil" update="true" insert="true">
          <column name="ID_PERFIL" not-null="true"/>
        </many-to-one>
        
        <set name="lojas" table="USUARIO_LOJA" cascade="save-update" lazy="false">
             <key column="ID_USUARIO"/>
             <many-to-many column="ID_LOJA" class="com.infinity.datamarket.comum.usuario.Loja"/>
        </set>

    </class>

</hibernate-mapping>
