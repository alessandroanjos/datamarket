<?xml version="1.0" encoding="UTF-8"?>
  
<!DOCTYPE hibernate-mapping   
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

   <hibernate-mapping>
      <joined-subclass name="com.infinity.datamarket.comum.pagamento.PlanoPagamentoAPrazo" extends="com.infinity.datamarket.comum.pagamento.PlanoPagamento" table="PLANO_PAGAMENTO_APRAZO" lazy="false" dynamic-insert="true" dynamic-update="true">

          <key>
              <column name="ID_PLANO"/>
          </key>
          
          <property name="percentagemEntrada" type="java.math.BigDecimal" update="true" insert="true">
              <column name="PERCENTAGEM_ENTRADA" length="20" not-null="false"/>
          </property>
          
          <property name="parcelasFixasVariadas" type="java.lang.String" update="true" insert="true">
              <column name="PARCELA_FIXA_VARIADA" length="1" not-null="false"/>
          </property>

              
          <property name="datasParcelasVariadasInformadaSistemaOuUsuario" type="java.lang.String" update="true" insert="true">
              <column name="DATA_INFOR_USU_SIST" length="1" not-null="false"/>
          </property>

          
          <set name="parcelas" inverse="true" cascade="all, delete-orphan" lazy="false" order-by="NUM_ENTRADA">
	        <key>
	            <column name="ID_PLANO" />
	        </key>
	        <one-to-many class="com.infinity.datamarket.comum.pagamento.ParcelaPlanoPagamentoAPrazo"/>
    	</set>
    	
          
      </joined-subclass>
   </hibernate-mapping>
